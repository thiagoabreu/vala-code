{
    "name": "vala",
    "displayName": "Vala Code",
    "description": "Vala Language Colorization for Visual Studio Code",
    "version": "0.3.5",
    "publisher": "thiagoabreu",
    "author": {
        "name": "Thiago 'Jedi' Abreu",
        "email": "thiagoa7@gmail.com",
        "url": "http://thiagoabreu.github.io/"
    },
    "contributors": [
        {
            "name": "Laurent Tr√©guier",
            "url": "https://github.com/LaurentTreguier"
        },
        {
            "name": "David Lechner",
            "url": "https://github.com/dlech"
        },
        {
            "name": "Helder Bertoldo ",
            "url": "https://github.com/btd1337"
        }
    ],
    "license": "MIT",
    "engines": {
        "vscode": "^1.34.0"
    },
    "galleryBanner": {
        "color": "#403757",
        "theme": "dark"
    },
    "icon": "images/vala.png",
    "badges": [
        {
            "url": "https://img.shields.io/github/contributors/thiagoabreu/vala-code.svg",
            "href": "https://github.com/thiagoabreu/vala-code/graphs/contributors",
            "description": "Awesome people!"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/thiagoabreu/vala-code.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "main": "./out/main.js",
    "activationEvents": [
        "onLanguage:vala"
    ],
    "contributes": {
        "languages": [
            {
                "id": "vala",
                "aliases": [
                    "Vala",
                    "vala"
                ],
                "extensions": [
                    ".vala",
                    ".vapi"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vala",
                "scopeName": "source.vala",
                "path": "./syntaxes/vala.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "vala",
                "path": "./snippets/snippets.json"
            }
        ],
        "problemPatterns": [
            {
                "name": "valac",
                "regexp": "^(.*?):(\\d+)[:\\.](\\d+)(?:-(\\d+)\\.(\\d+))?:\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "endLine": 4,
                "endColumn": 5,
                "severity": 6,
                "message": 7
            }
        ],
        "problemMatchers": [
            {
                "name": "valac",
                "owner": "vala",
                "fileLocation": "absolute",
                "pattern": "$valac"
            }
        ],
        "breakpoints": [
            {
                "language": "vala"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Vala Settings",
            "properties": {
                "vls.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "messages",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "devDependencies": {
        "@types/node": "^10.12.12",
        "@types/vscode": "^1.34.0",
        "typescript": "^3.2.2"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    }
}
